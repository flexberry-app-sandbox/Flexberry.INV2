<h3 class="ui header">{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.номер-caption")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.дата-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.дата
      class=(if (v-get validationModel "дата" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-дата=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "дата" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.обязаности
      class=(if (v-get validationModel "обязаности" "isInvalid") "error")
      label=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.обязаности-caption")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-обязаности=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "обязаности" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.сумма
      class=(if (v-get validationModel "сумма" "isInvalid") "error")
      label=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.сумма-caption")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-сумма=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сумма" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.подписьК-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.подписьК
      class=(if (v-get validationModel "подписьК" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-подписьК=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "подписьК" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.подписьО-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.подписьО
      class=(if (v-get validationModel "подписьО" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-подписьО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "подписьО" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.сотрудн-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.сотрудн
      displayAttributeName="фИО"
      autocomplete=true
      relationName="сотрудн"
      projection="СотруднL"
      title=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.сотрудн-caption")
      readonly=readonly
      componentName="сотруднLookup"
      class=(if (v-get validationModel "сотрудн" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-сотрудн=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "сотрудн" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.организация-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.организация
      displayAttributeName="наим"
      autocomplete=true
      relationName="организация"
      projection="ОрганизацияL"
      title=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.организация-caption")
      readonly=readonly
      componentName="организацияLookup"
      class=(if (v-get validationModel "организация" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-организация=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "организация" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.упрОБъек-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.упрОБъек
      relationName="упрОБъек"
      projection="УпрОБъекL"
      title=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.упрОБъек-caption")
      readonly=readonly
      componentName="упрОБъекLookup"
      class=(if (v-get validationModel "упрОБъек" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-упрОБъек=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "упрОБъек" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-n-v2-портф-ц-б-e.клиен-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.клиен
      displayAttributeName="наим"
      autocomplete=true
      relationName="клиен"
      projection="КлиенL"
      title=(t "forms.i-i-s-i-n-v2-портф-ц-б-e.клиен-caption")
      readonly=readonly
      componentName="клиенLookup"
      class=(if (v-get validationModel "клиен" "isInvalid") "error")
      data-test-i-i-s-i-n-v2-портф-ц-б-e-клиен=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "клиен" "message")}}
  </div>
</form>
